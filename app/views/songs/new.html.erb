<h2>Add New Song</h2>

<% if @song.errors.any? %>
    <% @song.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
    <% end %>
<% end %>

<div>
    <%= form_for @song do |f| %>
        <div>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label "Released?" %>
            <%= f.check_box :released %>
        </div>
        <div>
            <%= f.label :release_year %><br>
            <%= f.number_field :release_year %>
        </div>
        <div>
            <%= f.label :artist_name %><br>
            <%= f.text_field :artist_name %>
        </div>
        <div>
            <%= f.label :genre %><br>
            <%= f.text_field :genre %>
        </div>
        <%= f.submit %>
    <% end %>
</div>